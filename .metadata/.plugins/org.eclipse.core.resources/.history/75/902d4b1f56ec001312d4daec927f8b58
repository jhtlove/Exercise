package testquestion;

public class AddInList
{
	private Node head = new Node();
	
	public Node initia(int num)
	{
		int temp = num;
		int n = 0;
		Node index = head;
		do
		{
			n = temp % 10;
			Node nod = new Node(n);
			index.next = nod;
			index = index.next;
			temp = temp / 10;
		}while(temp != 0);
		return head;
	}
	
	public void add(Node b)
	{
		Node index1 = head;
		Node index2 = b;
		int sum1 = 0;
		int sum2 = 0;
		while(index1 != null)
		{
			int oneBit = index1.oneBit;
			sum1 = oneBit + sum1 * 10;
		}
		while(index2 != null)
		{
			int oneBit = index2.oneBit;
			sum2 = oneBit + sum2 * 10;
		}
		Node res = initia(sum1 + sum2);
		while(res.next != null)
		{
			System.out.print(res.next.oneBit);
			res = res.next;
		}
	}
	
	public static void main(String[] args)
	{
		
	}

}

class Node
{
	 int oneBit;
	 Node next;
	
	Node()
	{
		oneBit = 0;
		next = null;
	}
	
	Node(int oneBit)
	{
		if(oneBit >=0 && oneBit <=9)
			this.oneBit = oneBit;
		next = null;
	}
	
}
